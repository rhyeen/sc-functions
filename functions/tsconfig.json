{
  "compilerOptions": {
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "module": "commonjs",
    "outDir": "lib",
    "target": "es2017",
    "typeRoots": ["./types", "./node_modules/@types"]
  },
  "compileOnSave": true,
  "exclude": ["**/*.spec.ts", "**/*.test.ts", "./node_modules"],
  "include": ["./src/**/*.ts"]
}
